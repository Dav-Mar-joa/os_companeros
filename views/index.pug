html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Tâches du jour
    link(rel="manifest" href="/manifest.json")
    link(href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Audiowide', sans-serif; /* Police futuriste */
        margin: 0;
        padding: 20px;
        background-color: #121212; /* Fond sombre inspiré des années 80 */
        color: #b3b3b3; /* Texte gris clair */
        display: flex;
        justify-content: center;
        min-height: 100vh;
      }
      .container {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 1100px;
        gap: 20px;
      }
      .form-container, .tasks-container, .purchase-container {
        width: 100%;
      }
      .form {
        border: 2px solid #9c27b0; /* Bordure violette */
        justify-content: center; /* Centre horizontalement */
        align-items: center; /* Centre verticalement */
        padding: 15px;
        border-radius: 10px;
        background-color: #2a2a2a; /* Fond encore plus sombre pour le formulaire */
        margin-bottom: 20px;
      }
      .ajoutCommentaire {
        display: flex;
        justify-content: center; /* Centre horizontalement */
        align-items: center; /* Centre verticalement */
        width: 100%;
        gap: 10px; /* Espacement entre l'input et le bouton */
      }
      .ajoutCommentaire input {
        width: 60%; /* Champ de texte prend 60% de la largeur */
        padding: 10px;
        border: 2px solid #00bcd4;
        border-radius: 5px;
        background-color: #2a2a2a;
        color: #b3b3b3;
      }
      .ajoutCommentaire button {
        width: 10%; /* Le bouton prend 10% de la largeur */
        background-color: #00bcd4; /* Bleu cyan lumineux */
        color: #121212; /* Texte sombre pour contraste */
        border-radius: 5px;
        cursor: pointer;
        padding: 10px;
        font-weight: bold;
        transition: background-color 0.3s;
      }
      .button-submit-taches:hover, .button-submit:hover, .button-delete:hover {
        background-color: #00796b; /* Teinte plus foncée au survol */
        transform:scale(1.05);
        border-radius:15px;
      }
      .button-delete {
        background-color: #f44336; /* Rouge foncé pour la suppression */
      }
      .titre-container {
        display: flex;
        justify-content: space-between; /* Crée trois colonnes égales */
        width: 100%; /* Prend toute la largeur */
        padding-top:0px;
        padding-bottom:0px;
        margin-top:0px;
        margin-bottom:0px;
      }
      .titre {
        flex: 1; /* La colonne centrale occupe l'espace disponible */
        font-family: 'Audiowide', sans-serif;
        font-size: 3rem;
        color: #00c7ff; /* Bleu néon doux */
        text-align: center; /* Centrer le titre */
        width:60%;
        margin-bottom:3%;
        margin-top:0%;
        padding-top:0px;
        padding-bottom:0px;
      }
      .autres-pages {
        font-family: 'Audiowide', sans-serif;
        font-size: 1.5rem;
        color: #00c7ff; /* Bleu néon doux */
        align-self: center; /* Centrer le texte de la colonne droite */
        width:20%;
        text-align:center;
        margin-top:0;
        padding : 10px;
        padding-left:12px;
        padding-right:12px;
        border:2px solid #00bcd4;
        border-radius : 12px;
      }
      .autres-pages:hover {
        transform:scale(1.1);
      }
      .task {
        display: flex;
        gap: 20px; /* Espacement entre les deux colonnes */
        border: 2px solid #9c27b0; /* Bordure violette */
        background-color: #2a2a2a; /* Fond sombre */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
      }

      .task-left {
        display: flex;
        width: 15%;
        flex-direction: column; /* Aligne les éléments en colonne */
        justify-content: space-between; /* Aligne verticalement avec un espacement */
        word-wrap: break-word; /* Ancien nom, pour compatibilité */
        overflow-wrap: break-word; /* Nom moderne et standard */
        word-break: break-word; /* Comportement pour les très longs mots */
        border: 2px solid white !important;
        border-radius: 8px;
        text-align:center;
        padding:5px;
      }

      .task-right {
        display: flex;
        width: 90%;
        flex-direction: column;
        justify-content: space-between;
        word-wrap: break-word; /* Ancien nom, pour compatibilité */
        overflow-wrap: break-word; /* Nom moderne et standard */
        word-break: break-word; /* Comportement pour les très longs mots */
      }

      .task-header {
        display: flex;
        justify-content: flex-end; /* Aligne les éléments horizontalement */
        text-align:right;
      }

      button.button-delete {
        align-self: flex-end; /* Aligne le bouton à droite */
        color:white;
        text-shadow: 
        1px 1px 0px black,  /* Ombre en bas à droite */
        -1px 1px 0px black, /* Ombre en bas à gauche */
        1px -1px 0px black, /* Ombre en haut à droite */
        -1px -1px 0px black; /* Ombre en haut à gauche */
        font-family: 'Audiowide', sans-serif; 
        padding: 0.8%;
        padding-left:2%;
        padding-right:2%;
        border-radius:8px;
      }
      .task h3 {
        margin-top: 0;
        color: #9c27b0; /* Texte violet */
        text-align:left;
        padding:1%;
        padding-left:5%;
        padding-right:20%;
        margin-bottom:0;
        background-color: grey;
        border-radius:15px;
        border:3px solid #00c7ff;
      }
      .faible {
        background-color: #4caf50; /* Vert doux */
      }
      .haute {
        background-color: #d32f2f; /* Rouge foncé */
      }
      .moyenne {
        background-color: #2196f3; /* Bleu moyen */
      }
      .priority {
        margin-bottom: 5%;
      }
      .priority-qui-container {
        display: flex;
        gap: 20px;
        align-items: center;
      }
      .button-submit-taches {
        width: 100%;
        font-size:1.2rem;
      }
      .username-commentaire {
        padding-bottom:0;
        margin-bottom:0;
      }
      .button-container{
        display:flex;
        gap:10px;
        justify-content:space-between;
      }
      .button-like {
        background-color: transparent;
        border: none;
        cursor: pointer;
        background-color:#00c7ff;
        border-radius:8px;
        margin-left:3%;
      }
      .button-like:hover {
        background-color: white;
        transform:scale(1.1)
      }

      .button-like img {
        width: 20px; /* Taille de l'image du bouton Like */
        height: 20px;
      }

      .button-like div {
        display: flex;
        align-items: center;
      }
      @media (max-width: 450px) {
        .task-left {
          display: flex;
          width: 50%;
          flex-direction: column; /* Aligne les éléments en colonne */
          justify-content: space-between; /* Aligne verticalement avec un espacement */
          word-wrap: break-word; /* Ancien nom, pour compatibilité */
          overflow-wrap: break-word; /* Nom moderne et standard */
          word-break: break-word; /* Comportement pour les très longs mots */
          border : 2px solid white !important;
          border-radius : 8px;
        }

        .task-right {
          display: flex;
          width: 50%;
          flex-direction: column;
          justify-content: space-between;
          word-wrap: break-word; /* Ancien nom, pour compatibilité */
          overflow-wrap: break-word; /* Nom moderne et standard */
          word-break: break-word; /* Comportement pour les très longs mots */
        }
        .container {
          flex-direction: column;
        }
        .form-container, .tasks-container, .purchase-container {
          width: 100%;
        }
        .button-submit-taches, .button-delete {
          width: 100%;
        }
        .autres-pages {
        padding-left:20px;
        padding-right:20px;

      }
      }
      .autres-pages {
        padding-left:12px;
        padding-right:12px;

      }
  body
    .container
      .form-container
        .titre-container
          p.autres-pages Amigos
          p.autres-pages Profil
          p.autres-pages Chat 
        //- .formDate
        //-   .date-time
        //-     //- #dateJour
        //-     #heure  
        .titre-container
          p.titre Os compañeros
        form(action="/" method="post")
          .ajoutCommentaire
            label(for="task")
            input(type="text" id="task" name="task" required)
            button(type="submit" class="button-submit-taches") +
      .tasks-container
        each task in tasks
          .task(data-task-id=task._id class=task.priority)
            .task-left
              p Avatar
              p.username-commentaire Username
            .task-right
              .task-header
                
                p #{new Intl.DateTimeFormat('fr-FR', { dateStyle: 'short', timeStyle: 'short' }).format(new Date(task.date))}
              h3 #{task.name}  
              p #{task.description}
              .button-container
                button(type="button" onclick="deleteTask(this)" class="button-like") 
                  div 
                    img(src="/assets/like/like.png", alt="like")
                button(type="button" onclick="deleteTask(this)" class="button-delete") Supprimer    

    script(src="/js/script.js")
    script.
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
          navigator.serviceWorker.register('/service-worker.js').then(function(registration) {
            console.log('ServiceWorker registration successful with scope: ', registration.scope);
          }, function(err) {
            console.log('ServiceWorker registration failed: ', err);
          });
        });
      }

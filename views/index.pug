    link(rel="manifest" href="/manifest.json")
    style.
      body {
        font-family: 'Audiowide', sans-serif; /* Police futuriste */
        margin: 0;
        padding: 20px;
        background-color: #121212; /* Fond sombre inspiré des années 80 */
        color: #b3b3b3; /* Texte gris clair */
        display: flex;
        justify-content: center;
        min-height: 100vh;
      }
      .container {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 1100px;
        gap: 20px;
      }
      .form-container, .tasks-container, .purchase-container {
        width: 100%;
      }
      .form {
        border: 2px solid #9c27b0; /* Bordure violette */
        justify-content: center; /* Centre horizontalement */
        align-items: center; /* Centre verticalement */
        padding: 15px;
        border-radius: 10px;
        background-color: #2a2a2a; /* Fond encore plus sombre pour le formulaire */
        margin-bottom: 20px;
      }
      .ajoutCommentaire {
        display: flex;
        justify-content: center; /* Centre horizontalement */
        align-items: center; /* Centre verticalement */
        width: 100%;
        gap: 10px; /* Espacement entre l'input et le bouton */
      }
      .ajoutCommentaire input {
        width: 100%; /* Champ de texte prend 60% de la largeur */
        padding: 10px;
        border: 2px solid #00bcd4;
        border-radius: 5px;
        background-color: #2a2a2a;
        color: #b3b3b3;
      }
      .ajoutCommentaire button {
        width: 10%; /* Le bouton prend 10% de la largeur */
        background-color: #00bcd4; /* Bleu cyan lumineux */
        color: #121212; /* Texte sombre pour contraste */
        border-radius: 5px;
        cursor: pointer;
        padding: 10px;
        font-weight: bold;
        transition: background-color 0.3s;
      }
      .ajoutReponse {
        display: flex;
        justify-content: center; /* Répartir harmonieusement les éléments */
        align-items: center;
        gap: 10px;
        padding:2px;
        margin-bottom:10px;
        border: 2px solid #9c27b0; /* Bordure violette */
        border-radius: 10px;
        background-color: #1e1e1e; /* Fond légèrement différent pour se démarquer */
      }

      .ajoutReponse input {
        flex: 1; /* Prend tout l'espace disponible */
        padding: 10px;
        border: 2px solid #00bcd4; /* Contour cyan lumineux */
        border-radius: 5px;
        width: 100%;
        background-color: #2a2a2a;
        color: #b3b3b3;
        font-size: 1rem;
        transition: border-color 0.3s, box-shadow 0.3s;
        resize: vertical;
      }

      .ajoutReponse input:focus {
        border-color: #00e5ff; /* Couleur plus lumineuse au focus */
        width: 100%;
        box-shadow: 0 0 5px #00e5ff;
      }

      .ajoutReponse button {
        flex-shrink: 0; /* Garde une taille fixe */
        width: 15%; /* Taille ajustée pour être plus visible */
        background-color: #9c27b0; /* Violet pour contraster */
        color: #ffffff; /* Texte blanc pour contraste */
        border-radius: 5px;
        border: none;
        cursor: pointer;
        padding: 10px;
        font-weight: bold;
        font-size: 1rem;
        transition: transform 0.3s, background-color 0.3s;
      }

      .ajoutReponse button:hover {
        background-color: #7b1fa2; /* Violet plus foncé au survol */
        transform: scale(1.1);
      }
      .ajoutReponse-reponse {
        display: flex;
        justify-content: space-between; /* Répartir harmonieusement les éléments */
        align-items: center;
        width: 100%;
        gap: 10px;
        padding:2px;
        margin-bottom:10px;
        border: 2px solid #9c27b0; /* Bordure violette */
        border-radius: 10px;
        background-color: #1e1e1e; /* Fond légèrement différent pour se démarquer */
      }

      .ajoutReponse-reponse input {
        flex: 1; /* Prend tout l'espace disponible */
        padding: 10px;
        border: 2px solid #00bcd4; /* Contour cyan lumineux */
        border-radius: 5px;
        width: 100%;
        background-color: #2a2a2a;
        color: #b3b3b3;
        font-size: 1rem;
        transition: border-color 0.3s, box-shadow 0.3s;
        resize: vertical;
      }

      .ajoutReponse-reponse input:focus {
        border-color: #00e5ff; /* Couleur plus lumineuse au focus */
        width: 100%;
        box-shadow: 0 0 5px #00e5ff;
      }

      .ajoutReponse-reponse button {
        flex-shrink: 0; /* Garde une taille fixe */
        width: 15%; /* Taille ajustée pour être plus visible */
        background-color: #9c27b0; /* Violet pour contraster */
        color: #ffffff; /* Texte blanc pour contraste */
        border-radius: 5px;
        border: none;
        cursor: pointer;
        padding: 10px;
        font-weight: bold;
        font-size: 1rem;
        transition: transform 0.3s, background-color 0.3s;
      }

      .ajoutReponse-reponse button:hover {
        background-color: #7b1fa2; /* Violet plus foncé au survol */
        transform: scale(1.1);
      }
      .button-submit-taches:hover, .button-submit:hover {
        background-color: #00796b; /* Teinte plus foncée au survol */
        transform:scale(1.05);
        border-radius:15px;
      }
      .titre-container {
          display: flex;
          justify-content: space-between; /* Espace égal entre les colonnes */
          width: 100%;
          padding: 0; /* Supprime les marges internes */
          margin: 0; /* Supprime les marges externes */
          gap: 0; /* Aucune espace additionnelle entre les colonnes */
      }

      .titre-container > * {
          flex: 1; /* Chaque élément enfant prend un tiers de l'espace */
          text-align: center; /* Centrer le contenu dans chaque colonne */
      }
      .titre {
        flex: 1; /* La colonne centrale occupe l'espace disponible */
        font-family: 'Audiowide', sans-serif;
        font-size: 3rem;
        color: #00c7ff; /* Bleu néon doux */
        text-align: center; /* Centrer le titre */
        width:60%;
        margin-bottom:3%;
        margin-top:0%;
        padding-top:0px;
        padding-bottom:0px;
      }
      .autres-pages {
        font-family: 'Audiowide', sans-serif;
        font-size: 1.5rem;
        color: #00c7ff; /* Bleu néon doux */
        align-self: center; /* Centrer le texte de la colonne droite */
        width:12%;
        text-align:center;
        margin-top:0;
        padding : 10px;
        padding-left:12px;
        padding-right:12px;
        border:2px solid #00bcd4;
        border-radius : 12px;
      }
      .avatar-container {
        margin-bottom:3%;
        display: flex;
        align-items: center; /* Centre verticalement */
        justify-content: center; /* Centre horizontalement */
        text-align: center;
        gap: 20px;
      }

      .avatar {
        width: 90px; /* Ajuste la taille de l'avatar */
        height: 90px;
        border-radius: 50%; /* Rend l'avatar rond */
        border: 2px solid #00c7ff; /* Bordure pour mettre en valeur l'avatar */
        object-fit: cover; /* Ajuste l'image sans la déformer */
      }
      .autres-pages:hover {
        transform:scale(1.1);
      }
      .task {
        display: flex;
        gap: 20px; /* Espacement entre les deux colonnes */
        border: 2px solid #9c27b0; /* Bordure violette */
        background-color: #2a2a2a; /* Fond sombre */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
      }

      .task-left {
        display: flex;
        width: 0%;
        flex-direction: column; /* Aligne les éléments en colonne */
        justify-content: space-between; /* Aligne verticalement avec un espacement */
        word-wrap: break-word; /* Ancien nom, pour compatibilité */
        overflow-wrap: break-word; /* Nom moderne et standard */
        word-break: break-word; /* Comportement pour les très longs mots */
        border: 2px solid white !important;
        border-radius: 8px;
        text-align:center;
        padding:5px;
      }

      .task-right {
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: space-between;
        word-wrap: break-word; /* Ancien nom, pour compatibilité */
        overflow-wrap: break-word; /* Nom moderne et standard */
        word-break: break-word; /* Comportement pour les très longs mots */
      }

      .task-header {
        display: flex;
      
      }

      .task h3 {
        margin-top: 0;
        color: #FFA500; /* Texte violet */
        text-align:left;
        padding:1%;
        padding-left:5%;
        padding-right:5%;
        margin-bottom:0;
        background-color: grey;
        border-radius:15px;
        border:3px solid #00c7ff;
        letter-spacing: 2px;
        text-shadow: 
        -0.5px -0.5px 0 black, 
         0.5px -0.5px 0 black, 
        -0.5px  0.5px 0 black, 
         0.5px  0.5px 0 black; /* Crée un contour noir */
      }
      .faible {
        background-color: #4caf50; /* Vert doux */
      }
      .haute {
        background-color: #d32f2f; /* Rouge foncé */
      }
      .moyenne {
        background-color: #2196f3; /* Bleu moyen */
      }
      .priority {
        margin-bottom: 5%;
      }
      .priority-qui-container {
        display: flex;
        gap: 20px;
        align-items: center;
      }
      .button-submit-taches {
        width: 100%;
        font-size:1.2rem;
      }

      .avatar {
        padding-top:0%;
        width: 50px; /* Taille de l'avatar */
        height: 50px;
        border-radius: 50%; /* Forme ronde */
        background-color: #ccc; /* Couleur par défaut */
      }

      .avatars-container {
        display: flex;
        justify-content: center; /* Écart entre les éléments : gauche, centre, droite */
        align-items: center; /* Centrer les avatars verticalement */
        width: 100%;
        gap:10px
      }
      .avatars-container-head {
        display: flex;
        justify-content: center; /* Écart entre les éléments : gauche, centre, droite */
        align-items: center; /* Centrer les avatars verticalement */
        width: 100%;
        gap:10px
      }

      .avatars-container .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid #00c7ff; /* Bordure pour mettre en valeur */
        object-fit: cover; /* Ajuste l'image sans la déformer */
      }
      .dateCommentaire {
        margin-top:0%;
        padding-top:0%;
        text-align: right;
        flex: 1;  /* This will make the .dateCommentaire take up the available space */
        font-size:0.8rem;
        min-width:20%;
      }

      .button-container{
        display:flex;
        gap:10px;
        justify-content:space-between;
        margin-bottom:10px;
        padding-bottom:10px;
        height:40px;
      }
      .button-like {
        background-color: transparent;
        border: none;
        cursor: pointer;
        background-color:#00c7ff;
        border-radius:8px;
        margin-left:3%;
        border : 1px solid black;
      }
      .button-like:hover {
        background-color: white;
        transform:scale(1.1);
      }

      .button-like img {
        width: 25px; /* Taille de l'image du bouton Like */
        height: 25px;
        transform : scale(0.8);
      }

      .button-like div {
        display: flex;
        align-items: center;
      }
      .button-delete {
        align-self: flex-end; /* Aligne le bouton à droite */
        border: none;
        cursor: pointer;
        background-color:white;
        border-radius:8px;
        margin-left:3%;
      }
      .button-delete:hover {
        background-color: black;
        transform:scale(1.1);
        transition: transform 0.3s, background-color 0.3s;
      }

      .button-delete img {
        width: 25px; /* Taille de l'image du bouton Like */
        height: 25px;
      }

      .button-delete div {
        display: flex;
        align-items: center;
      }
      .button-head{
        border-radius:50%;
        background-color:#00c7ff;
      }
      .button-head:hover{
        background-color: #00796b; /* Teinte plus foncée au survol */
        transform:scale(1.05);
        border-radius:15px;
      }
      .button-ajoutReponse{
        border-radius:10px;
        background:yellow;
      }
      .button-ajoutReponse:hover{
        scale:1.1;
        background:green;
      }

      .affichageCommentaire {
        display:none;
      }
      .ajoutReponse-reponse {
      display: flex;
      flex-direction: column;
      border: 1px solid #ccc;
      padding: 10px;
      position: relative; /* Nécessaire pour positionner la date en bas à droite */
      height: 150px; /* Ajustez la hauteur selon vos besoins */
      width: 100%; /* Ajustez la largeur selon vos besoins */
      }

      .avatar-container-reponse {
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Avatar à gauche */
        position: relative;
        height: 100%;
      }

      .avatar-container-reponse img.avatar-reponse {
        align-self: flex-start; /* En haut à gauche */
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-bottom: 10px;
        margin-left:5%;
        margin-top:5%;
      }

      .username-commentaire-reponse {
        align-self: center; /* Au centre horizontalement */
        margin: 0;
        font-weight: bold;
        text-align: center;
        margin-left:5%;
      }

      .username-commentaire {
        align-self: center; /* Au centre horizontalement */
        margin: 0;
        font-weight: bold;
        text-align: center;
        word-wrap: break-word; /* Permet de couper le texte à l'intérieur du conteneur */
        overflow-wrap: break-word; /* Compatible avec davantage de navigateurs modernes */
        white-space: normal;
        margin: 0 auto;
        
        max-width:60%;
      }

      .commentaire-reponse {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-grow: 1; /* Prend tout l'espace restant pour être centré verticalement */
        text-align: center;
        margin-right:5%;
      }

      .date-reponse {
        position: absolute;
        bottom: 10px;
        right: 10px;
        font-size: 12px;
        color: #666;
      }

      .button-like.liked img {
          filter: brightness(1.5); /* Mettre l'icône plus lumineuse */
          transition: all 0.3s ease;
      }
      .like{
        border-radius : 10px; 
        margin-top:20px;
        background:white;
      }

      input[type="text"]::placeholder {
        color: white;         /* Texte du placeholder en blanc */    /* Texte du placeholder en gras */
      }

      
      @media (max-width: 450px) {
        .task-left {
          display: flex;
          width: 50%;
          flex-direction: column; /* Aligne les éléments en colonne */
          justify-content: space-between; /* Aligne verticalement avec un espacement */
          word-wrap: break-word; /* Ancien nom, pour compatibilité */
          overflow-wrap: break-word; /* Nom moderne et standard */
          word-break: break-word; /* Comportement pour les très longs mots */
          border : 2px solid white !important;
          border-radius : 8px;
        }

        .container {
          flex-direction: column;
        }
        .form-container, .tasks-container, .purchase-container {
          width: 100%;
        }
        .button-submit-taches{
          width: 100%;
        }
        .autres-pages {
        padding-left:20px;
        padding-right:20px;

        }
        .avatar-container {
        display: flex;
        align-items: center; /* Vertically centers the avatar and text */
        margin-bottom:6%;
        justify-content: center; /* Aligns items to the left */
        gap: 10px;
        }
        .avatar-container-head {
        display: flex;
        align-items: center; /* Vertically centers the avatar and text */
        margin-bottom:6%;
        justify-content: center; /* Aligns items to the left */
        gap: 10px;
        }
      }
      .autres-pages {
        padding-left:12px;
        padding-right:12px;
      }
  body
    .container
      .form-container
        .titre-container
          //- p.autres-pages Ami
          div.avatar-container-head
            form(action='/find' method='get')
              p Amis
              button.button-head
                img.avatar(src="assets/icons/friends.png", alt="friends")
          div.avatar-container-head
            form(action='/profil' method='get')
              p Profile
              button.button-head
                img.avatar(src=user.avatar, alt="avatar profil")   
          div.avatar-container-head
            form(action='/chat' method='get')
              p Chat 
              button.button-head
                img.avatar(src="assets/icons/message.png", alt="messages") 
          div.avatar-container-head
            form(action='/logout' method='get')
              p Bye
              button.button-head
                img.avatar(src="assets/icons/logout.png", alt="logout" )        
        form(action="/" method="post")
          .ajoutCommentaire
            label(for="task")
            input(type="text" id="task" name="task" required placeholder="Un feeling, une info à partager ?")
            button(type="submit" class="button-submit-taches") +
      .tasks-container
        each task in tasks
          if task
            .task(data-task-id=task._id class=task.priority)
              .task-right
                .task-header
                  .avatar-container
                    a(href=`/profil/${task.idUser}`)
                      div.avatar
                        //- img.avatar(src="assets/avatar/avatar2.png", alt="avatar profil")
                        img.avatar(src=task.avatar, alt="avatar profil")
                    p.username-commentaire #{task.username}
                  p.dateCommentaire #{new Intl.DateTimeFormat('fr-FR', { day: '2-digit', month: '2-digit', hour: '2-digit', minute: '2-digit' }).format(new Date(task.date))}
                  
                h3 #{task.name}  
                p #{task.description}
                .button-container
                  button(type="button", onclick=`addLike('${task._id}', this)` class="button-like")
                    img(src="/assets/like/like.png" alt="like")
                    p.like #{task.likes ? task.likes.length : 0}
                  //- button#toggle-commentaires(type="button" class="button-ajoutReponse") Commentaires
                  if task.idUser===user._id
                    button(type="button" onclick="deleteTask(this)" class="button-like")
                      div 
                        img(src="/assets/delete/delete.png", alt="delete")  

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Profil - Os compañeros
    link(href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Audiowide', sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #121212;
        color: #b3b3b3;
        display: flex;
        justify-content: center;
        
        min-height: 100vh;
      }
      .profile-container {
        width: 100%;
        max-width: 600px;
        padding: 20px;
        border: 2px solid #9c27b0;
        border-radius: 10px;
        background-color: #2a2a2a;
      }
      .profile-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
      }
      .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid #00c7ff;
        margin-bottom: 10px;
      }
      .profile-name {
        font-size: 2rem;
        color: #00c7ff;
        text-align: center;
      }
      .profile-section {
        margin-top: 20px;
      }
      .section-title {
        font-size: 1.5rem;
        color: #9c27b0;
        border-bottom: 2px solid #00bcd4;
        padding-bottom: 5px;
        margin-bottom: 10px;
      }
      .section-content {
        font-size: 1rem;
        color: #b3b3b3;
        line-height: 1.5;
      }
      .form-container, .tasks-container, .purchase-container {
        width: 100%;
      }
      .form {
        border: 2px solid #9c27b0; /* Bordure violette */
        justify-content: center; /* Centre horizontalement */
        align-items: center; /* Centre verticalement */
        padding: 15px;
        border-radius: 10px;
        background-color: #2a2a2a; /* Fond encore plus sombre pour le formulaire */
        margin-bottom: 20px;
      }
      .avatar {
        padding-top:0%;
        width: 50px; /* Taille de l'avatar */
        height: 50px;
        border-radius: 50%; /* Forme ronde */
        background-color: #ccc; /* Couleur par défaut */
      }

      .avatars-container {
        display: flex;
        justify-content: center; /* Écart entre les éléments : gauche, centre, droite */
        align-items: center; /* Centrer les avatars verticalement */
        width: 100%;
        gap:10px
      }
      .avatars-container-head {
        display: flex;
        justify-content: center; /* Écart entre les éléments : gauche, centre, droite */
        align-items: center; /* Centrer les avatars verticalement */
        width: 100%;
        gap:10px
      }

      .avatars-container .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid #00c7ff; /* Bordure pour mettre en valeur */
        object-fit: cover; /* Ajuste l'image sans la 
        déformer */
      }
      .titre-container-head {
          display: flex;
          justify-content: space-between; /* Espace égal entre les colonnes */
          width: 100%;
          padding: 0; /* Supprime les marges internes */
          margin: 0; /* Supprime les marges externes */
          gap: 0; /* Aucune espace additionnelle entre les colonnes */
      }

      .titre-container-head > * {
          flex: 1; /* Chaque élément enfant prend un tiers de l'espace */
          text-align: center; /* Centrer le contenu dans chaque colonne */
      }
      .button-head{
        border-radius:50%;
        background-color:#00c7ff;
      }
      .titre {
        flex: 1; /* La colonne centrale occupe l'espace disponible */
        font-family: 'Audiowide', sans-serif;
        font-size: 3rem;
        color: #00c7ff; /* Bleu néon doux */
        text-align: center; /* Centrer le titre */
        width:60%;
        margin-bottom:3%;
        margin-top:0%;
        padding-top:0px;
        padding-bottom:0px;
      }
      @media (max-width: 400px) {
        .profile-container {
          padding: 15px;
          width: 90%;
        }
        .container {
          flex-direction: column;
        }
        .form-container, .tasks-container, .purchase-container {
          width: 100%;
        }  
        .profile-avatar {
          width: 100px;
          height: 100px;
        }
        .profile-name {
          font-size: 1.5rem;
        }
        .section-title {
          font-size: 1.2rem;
        }
        .avatar-container {
        display: flex;
        align-items: center; /* Vertically centers the avatar and text */
        margin-bottom:6%;
        justify-content: center; /* Aligns items to the left */
        gap: 10px;
        }
        .avatar-container-head {
        display: flex;
        align-items: center; /* Vertically centers the avatar and text */
        margin-bottom:6%;
        justify-content: center; /* Aligns items to the left */
        gap: 10px;
        }
      }
      

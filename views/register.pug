html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Inscription
    link(href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Audiowide', sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #121212;
        color: #b3b3b3;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .register-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        border: 2px solid #9c27b0;
        border-radius: 10px;
        background-color: #2a2a2a;
      }
      .register-title {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
        color: #00c7ff;
      }
      .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
        //- text-align:center;
      }
      label {
        margin-bottom: 5px;
        font-weight: bold;
      }
      input, select {
        padding: 10px;
        border: 2px solid #00bcd4;
        border-radius: 5px;
        background-color: #121212;
        color: #b3b3b3;
      }
      button {
        width: 100%;
        padding: 10px;
        background-color: #00bcd4;
        color: #121212;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      button:hover {
        background-color: #00796b;
      }
      @media (max-width: 450px) {
        .register-container {
          padding: 15px;
        }
      }
  body
    .register-container
      h1.register-title Inscription
      form(action="/register" method="post")
        .form-group
          label(for="firstname") Pr√©nom
          input(type="text" id="firstname" name="firstname" required)
        .form-group
          label(for="lastname") Nom
          input(type="text" id="lastname" name="lastname" required)
        .form-group
          label(for="username") Nom d'utilisateur
          input(type="text" id="username" name="username" required)
        .form-group
          label(for="email") Email
          input(type="email" id="email" name="email" required)
        .form-group
          label(for="password") Mot de passe
          input(type="password" id="password" name="password" required)
        .form-group
          label(for="confirmPassword") Confirmer le mot de passe
          input(type="password" id="confirmPassword" name="confirmPassword" required)
        .form-group
          label(for="avatar") Choisir un avatar
          select(id="avatar" name="avatar")
            option(value="avatar1.png") Avatar 1
            option(value="avatar2.png") Avatar 2
            option(value="avatar3.png") Avatar 3
            //- Ajouter d'autres options selon vos images
        button(type="submit") S'inscrire

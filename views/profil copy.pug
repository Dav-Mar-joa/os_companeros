html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Profil
    link(rel="manifest" href="/manifest.json")
    link(href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Audiowide', sans-serif; /* Police futuriste */
        margin: 0;
        padding: 20px;
        background-color: #121212; /* Fond sombre inspiré des années 80 */
        color: #b3b3b3; /* Texte gris clair */
        display: flex;
        justify-content: center;
        min-height: 100vh;
      }
      .container {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 1100px;
        gap: 20px;
      }
      .form-container, .tasks-container, .purchase-container {
        width: 100%;
      }
      .form {
        border: 2px solid #9c27b0; /* Bordure violette */
        justify-content: center; /* Centre horizontalement */
        align-items: center; /* Centre verticalement */
        padding: 15px;
        border-radius: 10px;
        background-color: #2a2a2a; /* Fond encore plus sombre pour le formulaire */
        margin-bottom: 20px;
      }
      .ajoutCommentaire {
        display: flex;
        justify-content: center; /* Centre horizontalement */
        align-items: center; /* Centre verticalement */
        width: 100%;
        gap: 10px; /* Espacement entre l'input et le bouton */
      }
      .ajoutCommentaire input {
        width: 60%; /* Champ de texte prend 60% de la largeur */
        padding: 10px;
        border: 2px solid #00bcd4;
        border-radius: 5px;
        background-color: #2a2a2a;
        color: #b3b3b3;
      }
      .ajoutCommentaire button {
        width: 10%; /* Le bouton prend 10% de la largeur */
        background-color: #00bcd4; /* Bleu cyan lumineux */
        color: #121212; /* Texte sombre pour contraste */
        border-radius: 5px;
        cursor: pointer;
        padding: 10px;
        font-weight: bold;
        transition: background-color 0.3s;
      }
      .button-submit-taches:hover, .button-submit:hover {
        background-color: #00796b; /* Teinte plus foncée au survol */
        transform:scale(1.05);
        border-radius:15px;
      }
      .titre-container {
          display: flex;
          justify-content: space-between; /* Espace égal entre les colonnes */
          width: 100%;
          padding: 0; /* Supprime les marges internes */
          margin: 0; /* Supprime les marges externes */
          gap: 0; /* Aucune espace additionnelle entre les colonnes */
      }

      .titre-container > * {
          flex: 1; /* Chaque élément enfant prend un tiers de l'espace */
          text-align: center; /* Centrer le contenu dans chaque colonne */
      }
      .titre {
        flex: 1; /* La colonne centrale occupe l'espace disponible */
        font-family: 'Audiowide', sans-serif;
        font-size: 3rem;
        color: #00c7ff; /* Bleu néon doux */
        text-align: center; /* Centrer le titre */
        width:60%;
        margin-bottom:3%;
        margin-top:0%;
        padding-top:0px;
        padding-bottom:0px;
      }
      .autres-pages {
        font-family: 'Audiowide', sans-serif;
        font-size: 1.5rem;
        color: #00c7ff; /* Bleu néon doux */
        align-self: center; /* Centrer le texte de la colonne droite */
        width:12%;
        text-align:center;
        margin-top:0;
        padding : 10px;
        padding-left:12px;
        padding-right:12px;
        border:2px solid #00bcd4;
        border-radius : 12px;
      }
      .avatar-container {
        margin-bottom:3%;
        display: flex;
        align-items: center; /* Centre verticalement */
        justify-content: center; /* Centre horizontalement */
        text-align: center;
        gap: 20px;
      }

      .avatar {
        width: 90px; /* Ajuste la taille de l'avatar */
        height: 90px;
        border-radius: 50%; /* Rend l'avatar rond */
        border: 2px solid #00c7ff; /* Bordure pour mettre en valeur l'avatar */
        object-fit: cover; /* Ajuste l'image sans la déformer */
      }
      .autres-pages:hover {
        transform:scale(1.1);
      }
      .task {
        display: flex;
        gap: 20px; /* Espacement entre les deux colonnes */
        border: 2px solid #9c27b0; /* Bordure violette */
        background-color: #2a2a2a; /* Fond sombre */
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
      }

      .task-left {
        display: flex;
        width: 0%;
        flex-direction: column; /* Aligne les éléments en colonne */
        justify-content: space-between; /* Aligne verticalement avec un espacement */
        word-wrap: break-word; /* Ancien nom, pour compatibilité */
        overflow-wrap: break-word; /* Nom moderne et standard */
        word-break: break-word; /* Comportement pour les très longs mots */
        border: 2px solid white !important;
        border-radius: 8px;
        text-align:center;
        padding:5px;
      }

      .task-right {
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: space-between;
        word-wrap: break-word; /* Ancien nom, pour compatibilité */
        overflow-wrap: break-word; /* Nom moderne et standard */
        word-break: break-word; /* Comportement pour les très longs mots */
      }

      .task-header {
        display: flex;
      }

      .task-header-infos {
        display: flex;
        line-height: 1;
        margin:0;
      }

      .task h3 {
        margin-top: 0;
        color: #FFA500; /* Texte violet */
        text-align:left;
        padding:1%;
        padding-left:5%;
        padding-right:5%;
        margin-bottom:0;
        background-color: grey;
        border-radius:15px;
        border:3px solid #00c7ff;
        letter-spacing: 2px;
        text-shadow: 
        -0.5px -0.5px 0 black, 
         0.5px -0.5px 0 black, 
        -0.5px  0.5px 0 black, 
         0.5px  0.5px 0 black; /* Crée un contour noir */
      }
      .faible {
        background-color: #4caf50; /* Vert doux */
      }
      .haute {
        background-color: #d32f2f; /* Rouge foncé */
      }
      .moyenne {
        background-color: #2196f3; /* Bleu moyen */
      }
      .priority {
        margin-bottom: 5%;
      }
      .priority-qui-container {
        display: flex;
        gap: 20px;
        align-items: center;
      }
      .button-submit-taches {
        width: 100%;
        font-size:1.2rem;
      }

      .avatar {
        padding-top:0%;
        width: 50px; /* Taille de l'avatar */
        height: 50px;
        border-radius: 50%; /* Forme ronde */
        background-color: #ccc; /* Couleur par défaut */
      }

      .avatars-container {
        display: flex;
        justify-content: center; /* Écart entre les éléments : gauche, centre, droite */
        align-items: center; /* Centrer les avatars verticalement */
        width: 100%;
        gap:10px
      }
      .avatars-container-head {
        display: flex;
        justify-content: center; /* Écart entre les éléments : gauche, centre, droite */
        align-items: center; /* Centrer les avatars verticalement */
        width: 100%;
        gap:10px
      }

      .avatars-container .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid #00c7ff; /* Bordure pour mettre en valeur */
        object-fit: cover; /* Ajuste l'image sans la déformer */
      }
      .dateCommentaire {
        margin-top:0%;
        padding-top:0%;
        text-align: right;
        flex: 1;  /* This will make the .dateCommentaire take up the available space */
        font-size:0.8rem;
      }

      .button-container{
        display:flex;
        gap:10px;
        justify-content:space-between;
      }
      .button-like {
        background-color: transparent;
        border: none;
        cursor: pointer;
        background-color:#00c7ff;
        border-radius:8px;
        margin-left:3%;
        border : 1px solid black;
      }
      .button-like:hover {
        background-color: white;
        transform:scale(1.1);
      }

      .button-like img {
        width: 25px; /* Taille de l'image du bouton Like */
        height: 25px;
        transform : scale(0.8);
      }

      .button-like div {
        display: flex;
        align-items: center;
      }
      .button-delete {
        align-self: flex-end; /* Aligne le bouton à droite */
        border: none;
        cursor: pointer;
        background-color:white;
        border-radius:8px;
        margin-left:3%;
      }
      .button-delete:hover {
        background-color: black;
        transform:scale(1.1);
        transition: transform 0.3s, background-color 0.3s;
      }

      .button-delete img {
        width: 25px; /* Taille de l'image du bouton Like */
        height: 25px;
      }

      .button-delete div {
        display: flex;
        align-items: center;
      }
      .button-head{
        border-radius:50%;
        background-color:#00c7ff;
      }
      
      @media (max-width: 400px) {
        .task-left {
          display: flex;
          width: 50%;
          flex-direction: column; /* Aligne les éléments en colonne */
          justify-content: space-between; /* Aligne verticalement avec un espacement */
          word-wrap: break-word; /* Ancien nom, pour compatibilité */
          overflow-wrap: break-word; /* Nom moderne et standard */
          word-break: break-word; /* Comportement pour les très longs mots */
          border : 2px solid white !important;
          border-radius : 8px;
        }

        .container {
          flex-direction: column;
        }
        .form-container, .tasks-container, .purchase-container {
          width: 100%;
        }
        .button-submit-taches{
          width: 100%;
        }
        .autres-pages {
        padding-left:20px;
        padding-right:20px;

        }
        .avatar-container {
        display: flex;
        align-items: center; /* Vertically centers the avatar and text */
        margin-bottom:6%;
        justify-content: center; /* Aligns items to the left */
        gap: 10px;
        }
        .avatar-container-head {
        display: flex;
        align-items: center; /* Vertically centers the avatar and text */
        margin-bottom:6%;
        justify-content: center; /* Aligns items to the left */
        gap: 10px;
        }
      }
      .autres-pages {
        padding-left:12px;
        padding-right:12px;
      }
      .task-header-infos {
        display: flex;
        line-height: 1;
        margin:0;
      }
      .username-infos{
        margin : 0;
        padding:0;
        margin-bottom: 5%;
      }
